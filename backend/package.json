{
  "name": "@onsembl/backend",
  "version": "0.1.0",
  "description": "Fastify control server for Onsembl.ai Agent Control Center",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon --exec tsx src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix"
  },
  "dependencies": {
    "@fastify/cors": "^8.4.0",
    "@fastify/jwt": "^7.2.0",
    "@fastify/swagger": "^8.12.0",
    "@fastify/swagger-ui": "^2.1.0",
    "@fastify/websocket": "^8.3.0",
    "@onsembl/agent-protocol": "*",
    "@onsembl/command-queue": "*",
    "@onsembl/trace-collector": "*",
    "@supabase/supabase-js": "^2.57.4",
    "bullmq": "^4.15.0",
    "fastify": "^4.24.0",
    "pino": "^8.16.0",
    "pino-pretty": "^10.2.0",
    "redis": "^4.6.0",
    "uuid": "^13.0.0",
    "ws": "^8.14.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.0",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.5.0",
    "dotenv": "^16.3.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.0",
    "ts-jest": "^29.1.0",
    "tsx": "^4.6.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
